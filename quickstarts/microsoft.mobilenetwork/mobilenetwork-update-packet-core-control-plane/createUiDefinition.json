{
	"$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
	"handler": "Microsoft.Azure.CreateUIDef",
	"version": "0.1.2-preview",
	"parameters": {
		"basics": [
			{
				"name": "packetCoreSelector",
				"type": "Microsoft.Solutions.ResourceSelector",
				"label": "Existing packet core",
				"resourceType": "Microsoft.MobileNetwork/packetCoreControlPlanes",
				"toolTip": "Select the existing packet core you wish to upgrade",
				"options": {
					"filter": {
						"subscription": "onBasics",
						"location": "onBasics"
					}
				}
			},
			{
				"name": "newVersion",
				"type": "Microsoft.Common.TextBox",
				"label": "New version",
				"toolTip": "The new version of packet core to install. Contact your support engineer for instructions",
				"constraints": {
					"required": true,
					"regex": "^.*$",
					"validationMessage": "Please enter a valid version"
				}
			}
		]
	},
	"steps": [
		{
			"name": "getExistingConfig",
			"label": "Get existing configuration",
			"elements": [
				{
					"name": "existingSiteConfig",
					"type": "Microsoft.Solutions.ArmApiControl",
					"request": {
						"method": "GET",
						"path": "[concat(basics('packetCoreSelector').id, '?api-version=2022-03-01-preview')]"
					}
				}
			]
		}
	],
	"outputs": {
		"location": "[location()]",
		"siteName": "[basics('packetCoreSelector').name]",
		"existingMobileNetworkName": "[last(split(steps('getExistingConfig').existingSiteConfig.properties.mobileNetwork.id, '/'))]",
		"existingPacketCoreNetworkTechnology": "[steps('getExistingConfig').existingSiteConfig.properties.coreNetworkTechnology]",
		"existingPacketCoreCustomLocationId": "[steps('getExistingConfig').existingSiteConfig.properties.customLocation.id]",
		"controlPlaneAccessInterfaceName": "[steps('getExistingConfig').existingSiteConfig.properties.controlPlaneAccessInterface.name]",
		"controlPlaneAccessIpAddress": "[steps('getExistingConfig').existingSiteConfig.properties.controlPlaneAccessInterface.ipv4Address]",
		"accessSubnet": "[steps('getExistingConfig').existingSiteConfig.properties.controlPlaneAccessInterface.ipv4Subnet]",
		"accessGateway": "[steps('getExistingConfig').existingSiteConfig.properties.controlPlaneAccessInterface.ipv4Gateway]",
		"newVersion": "[basics('newVersion')]"
	}
}